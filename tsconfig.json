{
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "target": "ESNext",
        "experimentalDecorators": true,
        "strict": true,
        "allowJs": true,
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "lib": [
            "dom",
            "esnext"
        ],
        "jsx": "react-jsx"
    }
}